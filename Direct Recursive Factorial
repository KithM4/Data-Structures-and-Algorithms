public class DirectRecursiveFactorial {

    // Method to calculate factorial using direct recursion
    public static long factorial(int n) {
        // Base case: factorial of 0 is 1
        if (n == 0) {
            return 1;
        }
        // Recursive case: factorial of n is n * factorial of (n - 1)
        return n * factorial(n - 1);
    }

    public static void main(String[] args) {
        int number = 5; // Change this value to test other numbers
        try {
            System.out.println("Factorial of " + number + " is " + factorial(number));
        } catch (StackOverflowError e) {
            System.out.println("Stack overflow error due to excessive recursion.");
        }
    }
}
